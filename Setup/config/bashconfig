
PATH=$PATH":/home/$(whoami)/bin"
set -o vi

#Functions{

awiki(){
	link=$(echo "https://wiki.archlinux.org/index.php/""$1")
	w3m "$link"
}

crondaily(){
	echo -e "Shortcut:"
	read short
}


#}


#Aliases:

